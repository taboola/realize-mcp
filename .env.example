# Set MCP_TRANSPORT=sse to enable SSE transport with OAuth 2.1 authentication
MCP_TRANSPORT=stdio

# Realize API Credentials (required for stdio transport)
REALIZE_CLIENT_ID=your_client_id_here
REALIZE_CLIENT_SECRET=your_client_secret_here

# SSE Transport Configuration (required for SSE mode only)
# MCP_SERVER_SCHEME=https  # Default: https. Set to "http" for local dev without TLS.
OAUTH_SERVER_URL=https://auth.example.com
MCP_SERVER_PORT=8000
OAUTH_DCR_CLIENT_ID=your_dcr_client_id
OAUTH_DCR_CLIENT_SECRET=your_dcr_client_secret
OAUTH_SCOPES=all
OAUTH_REFRESH_BUFFER_SECONDS=60
