# ── Transport Selection ───────────────────────────────────────────────
MCP_TRANSPORT=stdio

# ── Shared Settings ──────────────────────────────────────────────────
REALIZE_BASE_URL=https://backstage.taboola.com/backstage
LOG_LEVEL=DEBUG

# ── Stdio Transport (required when MCP_TRANSPORT=stdio) ─────────────
REALIZE_CLIENT_ID=your_client_id_here
REALIZE_CLIENT_SECRET=your_client_secret_here

# ── Streamable HTTP Transport (required when MCP_TRANSPORT=streamable-http) ──
# MCP_SERVER_SCHEME=https  # Default: https. Set to "http" for local dev without TLS.
MCP_SERVER_PORT=8000
OAUTH_SERVER_URL=https://authentication.taboola.com/authentication
OAUTH_DCR_CLIENT_ID=your_dcr_client_id
OAUTH_DCR_CLIENT_SECRET=your_dcr_client_secret
OAUTH_SCOPES=all
