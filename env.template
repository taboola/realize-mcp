# env.template - Template file for environment variables
# Copy to .env and fill in your actual tokens

# PyPI Credentials (get from https://pypi.org/manage/account/token/)
PYPI_API_TOKEN=pypi-your-production-token-here
TEST_PYPI_API_TOKEN=pypi-your-test-token-here

# Deployment Settings
DEFAULT_PYTHON_VERSION=3.11
PACKAGE_NAME=realize-mcp

# Optional: Custom PyPI repositories
# PYPI_REPOSITORY_URL=https://upload.pypi.org/legacy/
# TEST_PYPI_REPOSITORY_URL=https://test.pypi.org/legacy/

# Realize API Credentials (for testing)
REALIZE_CLIENT_ID=your_client_id
REALIZE_CLIENT_SECRET=your_client_secret 